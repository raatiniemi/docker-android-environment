#!/usr/bin/env bash
ANDROID_TOOLS_ZIP="sdk-tools-linux-4333796.zip";

echo "Install necessary dependencies for builder image...";
apt-get -qq update &>/dev/null;
apt-get -qq install -y curl unzip ca-certificates --no-install-recommends &>/dev/null;

echo "Download and unpack Android SDK tools...";
curl -O -Ls "https://dl.google.com/android/repository/${ANDROID_TOOLS_ZIP}";
unzip -qq "${ANDROID_TOOLS_ZIP}" -d android;
