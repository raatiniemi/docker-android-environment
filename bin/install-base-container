#!/usr/bin/env bash
PACKAGES="libstdc++6:i386 zlib1g:i386 libncurses5:i386";

echo "Configure container environment...";
dpkg --add-architecture i386;

echo "Install necessary container dependencies...";
apt-get -qq update &>/dev/null;
apt-get -qq install -y $PACKAGES --no-install-recommends &>/dev/null;

echo "Install necessary Android build components...";
install-via-sdkmanager tools;
install-via-sdkmanager platform-tools;
