#!/usr/bin/env bash
if [ -z "${ANDROID_HOME}" ]; then
  >&2 echo "No home directory defined using ANDROID_HOME.";
  exit 1;
fi;
if [ -z "${ANDROID_TOOLS_ZIP}" ]; then
  echo "No android tools zip basename defined using ANDROID_TOOLS_ZIP.";
  exit 1;
fi;

if [ ! -d "${ANDROID_HOME}" ]; then
  mkdir -p "${ANDROID_HOME}";
fi;

curl -O -Ls "https://dl.google.com/android/repository/${ANDROID_TOOLS_ZIP}";
unzip -qq "${ANDROID_TOOLS_ZIP}" -d "${ANDROID_HOME}";
rm "${ANDROID_TOOLS_ZIP}";
