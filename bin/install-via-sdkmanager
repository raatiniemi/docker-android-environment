#!/usr/bin/env bash
if [ -z "${ANDROID_HOME}" ]; then
  >&2 echo "No home directory defined using ANDROID_HOME.";
  exit 1;
fi;
if [ -z "${1}" ]; then
  >&2 echo "No package specified for installation, usage:";
  >&2 echo "${0} package";
  exit 1;
fi;

yes | ${ANDROID_HOME}/tools/bin/sdkmanager $1 >/dev/null;
